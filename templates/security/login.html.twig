{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container w-50 p-3 bg-dark border border-light rounded-lg">


        <h1 class="h2 mb-3 font-weight-normal text-warning text-center">Please sign in</h1>
        <label class="text-white" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
               autofocus>
        </br>
        <label class="text-white" for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        </br>
        <div class="checkbox mb-3 text-white">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <button class="btn btn-lg btn-warning" type="submit">
            Sign in
        </button>
        </form>

    </div>
    <div class="container">
        <div class="p-4">
            <a class="btn btn-dark " href="{{ path('category_index') }}">back home</a>
        </div>
        <div class="p-4">
            <a class="btn btn-success " href="{{ path('user_new') }}">New account</a>
        </div>
    </div>
{% endblock %}
